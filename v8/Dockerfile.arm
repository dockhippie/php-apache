FROM webhippie/apache:latest-arm@sha256:0a27837b7fc91b740f0adac03374b47ac6467b96922f3a09a12c15665f05a1c1

VOLUME ["/etc/php8/custom.d"]
EXPOSE 8080

WORKDIR /srv/www
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  apk add php8 php8-apache2 php8-ctype php8-curl php8-dom php8-gd php8-iconv php8-intl php8-json php8-mysqli php8-mysqlnd php8-openssl php8-opcache php8-pdo php8-pdo_mysql php8-pdo_pgsql php8-pdo_sqlite php8-pear php8-pgsql php8-phar php8-sqlite3 php8-xml php8-zip php8-mbstring php8-simplexml php8-tokenizer php8-xmlwriter php8-fileinfo php8-soap php8-apcu php8-redis php8-pecl-memcached git && \
  ln -sf /usr/bin/php8 /usr/bin/php && \
  rm -rf /var/cache/apk/* /etc/php8/* && \
  mv /srv/www/index.html /srv/www/index.php

COPY ./overlay /

RUN curl -sSLo - https://getcomposer.org/installer | php -- --install-dir=/usr/bin --filename=composer && \
  curl -sSLo /etc/php8/browscap.ini http://browscap.org/stream\?q=PHP_BrowsCapINI
